# ================================
# CONFIGURAÇÕES DO AMBIENTE
# ================================

# Ambiente de execução (development, production, railway)
ENVIRONMENT=development
RAILWAY_DEPLOY=False
PORT=8000

# ================================
# CONFIGURAÇÕES DO WAHA
# ================================

# Para desenvolvimento local (Docker Compose)
WAHA_URL=http://localhost:3000

# Para produção no Railway (você precisa deployar o WAHA separadamente)
# WAHA_URL=https://seu-waha-app.railway.app

# Nome da instância do WhatsApp
WAHA_INSTANCE_NAME=claudia-cobrancas

# URL do webhook (onde o WAHA enviará as mensagens recebidas)
WEBHOOK_URL=http://localhost:8000/webhook

# Chave de API do WAHA (opcional, mas recomendado em produção)
# WAHA_API_KEY=sua-chave-secreta-aqui

# Timeout e tentativas
WAHA_TIMEOUT=30000
WAHA_MAX_RETRIES=3
WAHA_AUTO_RECONNECT=True

# ================================
# CONFIGURAÇÕES DE SMS (Opcional)
# ================================

# Provider de SMS (console, twilio, aws_sns)
SMS_PROVIDER=console

# Para Twilio
# TWILIO_ACCOUNT_SID=your_account_sid
# TWILIO_AUTH_TOKEN=your_auth_token  
# TWILIO_PHONE_NUMBER=+1234567890

# Para AWS SNS
# AWS_ACCESS_KEY_ID=your_access_key
# AWS_SECRET_ACCESS_KEY=your_secret_key
# AWS_REGION=us-east-1

# ================================
# CONFIGURAÇÕES DO SISTEMA
# ================================

# Logging
LOG_LEVEL=INFO
ENABLE_DETAILED_LOGS=True

# Performance
MAX_WORKERS=4
CONCURRENT_DOWNLOADS=3
CACHE_TTL=1800
MAX_CONCURRENT_REQUESTS=20

# Segurança
SESSION_TIMEOUT=3600
REQUEST_TIMEOUT=60
MAX_REQUEST_SIZE=52428800

# ================================
# URLs DO SISTEMA
# ================================

# URL base da aplicação
BASE_URL=http://localhost:8000

# URLs externas
SAC_URL=https://sac.desktop.com.br/Cliente_Documento.jsp
SUPPORT_EMAIL=cobranca@desktop.com.br
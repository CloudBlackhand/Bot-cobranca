# Configurações do Traefik e Docker Compose
# Copie este arquivo para .env e ajuste as configurações

# ===========================
# CONFIGURAÇÕES DO TRAEFIK
# ===========================

# Domínio principal da aplicação
DOMAIN=claudia.localhost

# Email para certificados SSL (Let's Encrypt)
ACME_EMAIL=admin@example.com

# Senha do dashboard do Traefik (gerar com: htpasswd -nb admin sua_senha)
TRAEFIK_DASHBOARD_AUTH=admin:$$2y$$10$$...

# ===========================
# CONFIGURAÇÕES DA APLICAÇÃO
# ===========================

# Modo proxy (sempre true quando usando Traefik)
BEHIND_PROXY=true

# Path base da aplicação (deixar vazio para raiz)
ROOT_PATH=

# Origens permitidas para CORS (separadas por vírgula)
ALLOWED_ORIGINS=http://localhost,https://localhost,http://claudia.localhost,https://claudia.localhost

# Hosts confiáveis (separados por vírgula)
TRUSTED_HOSTS=localhost,claudia.localhost

# Porta da aplicação (não mudar)
PORT=8000

# ===========================
# CONFIGURAÇÕES DE PERFORMANCE
# ===========================

# Nível de log (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# Logs detalhados
ENABLE_DETAILED_LOGS=true

# Workers (1 para desenvolvimento, 2-4 para produção)
MAX_WORKERS=1

# ===========================
# CONFIGURAÇÕES DO PLAYWRIGHT
# ===========================

PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=90000
PLAYWRIGHT_MAX_RETRIES=2

# ===========================
# CONFIGURAÇÕES DO WHATSAPP
# ===========================

WHATSAPP_HEADLESS=true
WHATSAPP_TIMEOUT=20000

# ===========================
# URLs DO SISTEMA
# ===========================

SAC_URL=https://sac.desktop.com.br/Cliente_Documento.jsp
SUPPORT_EMAIL=cobranca@desktop.com.br